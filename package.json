  "scripts": {
    "start:blue": "npm install && nest build && cross-env NODE_ENV=prod CLUSTERING=true pm2 start ecosystem.config.js --only app-blue",
    "stop:blue": "pm2 delete ecosystem.config.js --only app-blue",
    "start:green": "npm install && nest build && cross-env NODE_ENV=prod CLUSTERING=true pm2 start ecosystem.config.js --only app-green",
    "stop:green": "pm2 delete ecosystem.config.js --only app-green",
    "build": "nest build",
    "pm2:start:dev": "npm install && nest build && cross-env NODE_ENV=dev CLUSTERING=true pm2 start",
    "pm2:start:dev1": "cross-env NODE_ENV=dev CLUSTERING=true pm2 start",
    "pm2:start:prod": "npm install && nest build && cross-env NODE_ENV=prod CLUSTERING=true pm2 start",
    "pm2:start:prod1": " cross-env NODE_ENV=prod CLUSTERING=true pm2 start",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2 start dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
